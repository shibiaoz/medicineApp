<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.zhangshibiao.medicinetipsapp.AboutUsActivity">

    <RelativeLayout
        android:background="@drawable/top_border_stroke_white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/aboutus_back_btn"
            android:src="@mipmap/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:paddingLeft="0dp"
            android:textSize="22sp"
            android:textColor="#000"
            android:text="@string/about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:maxLines="1"
        android:background="@drawable/top_border_stroke_white"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="@string/about_us_addr"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@drawable/top_border_stroke_white"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="@string/about_us_tel"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/top_border_stroke_white"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="@string/about_us_email"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
